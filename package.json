{
  "private": true,
  "name": "featpad",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --cors --single",
    "dev": "preact watch --port 3000",
    "lint": "eslint src",
    "test": "jest",
    "server": "node-env-run server --exec nodemon",
    "devBoth": "run-p server dev"
  },
  "proxy": "http://localhost:3001",
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "node-env-run": "^3.0.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "pino-colada": "^2.0.1",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.2.1",
    "sirv-cli": "^0.4.5"
  },
  "dependencies": {
    "@octokit/auth-app": "^2.4.10",
    "@rocket.chat/css-in-js": "^0.13.1",
    "@rocket.chat/fuselage": "^0.13.1",
    "@rocket.chat/fuselage-hooks": "^0.13.1",
    "@rocket.chat/fuselage-polyfills": "^0.13.1",
    "@rocket.chat/icons": "^0.13.1",
    "axios": "^0.19.2",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  }
}
